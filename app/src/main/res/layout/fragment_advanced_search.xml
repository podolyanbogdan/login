<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.screens.defaultt.DefaultFragment">

    <data>

        <variable
            name="viewmodel"
            type="com.example.login.ui.screens.advanced.AdvancedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edMainSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:text="@={viewmodel.searchModel.search}"
            android:autofillHints="name"
            android:ems="10"
            android:hint="@string/searching"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edGenus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="name"
            android:ems="10"
            android:text="@={viewmodel.searchModel.gen}"
            android:hint="@string/genus"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/edMainSearch"
            app:layout_constraintStart_toStartOf="@+id/edMainSearch"
            app:layout_constraintTop_toBottomOf="@+id/edMainSearch" />

        <EditText
            android:id="@+id/edBackgroundSubspecies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="name"
            android:ems="10"
            android:hint="@string/background_subspecies"
            android:text="@={viewmodel.searchModel.subtype}"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/edSubspecies"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edSubspecies"
            app:layout_constraintTop_toBottomOf="@+id/edSubspecies" />

        <EditText
            android:id="@+id/edPlace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="name"
            android:ems="10"
            android:hint="@string/place"
            android:inputType="textPersonName"
            android:text="@={viewmodel.searchModel.place}"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/edSoundType"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edSoundType"
            app:layout_constraintTop_toBottomOf="@+id/edSoundType" />

        <EditText
            android:id="@+id/edSubspecies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="name"
            android:ems="10"
            android:text="@={viewmodel.searchModel.type}"
            android:hint="@string/subspecies"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/edGenus"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edGenus"
            app:layout_constraintTop_toBottomOf="@+id/edGenus" />

        <EditText
            android:id="@+id/edSoundType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="name"
            android:ems="10"
            android:hint="@string/sound_type"
            android:text="@={viewmodel.searchModel.soundType}"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/edBackgroundSubspecies"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edBackgroundSubspecies"
            app:layout_constraintTop_toBottomOf="@+id/edBackgroundSubspecies" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/typesLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="381dp"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/edPlace"
            app:layout_constraintStart_toStartOf="@+id/edPlace"
            app:layout_constraintTop_toBottomOf="@+id/edPlace">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:dropdown_text="@={viewmodel.searchModel.country}"
                android:inputType="none"
                android:text="@string/countries" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/edRemark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/remarks"
            android:text="@={viewmodel.searchModel.remarks}"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/edPlace"
            app:layout_constraintStart_toStartOf="@+id/edPlace"
            app:layout_constraintTop_toBottomOf="@+id/typesLayout" />

        <EditText
            android:id="@+id/edPostAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/post_author"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="@={viewmodel.searchModel.author}"
            app:layout_constraintEnd_toEndOf="@+id/edRemark"
            app:layout_constraintStart_toStartOf="@+id/edRemark"
            app:layout_constraintTop_toBottomOf="@+id/edRemark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cornerRadius="0dp"
            android:text="@string/search"
            android:onClick="@{() -> viewmodel.onSearch()}"
            app:layout_constraintEnd_toEndOf="@+id/edPostAuthor"
            app:layout_constraintStart_toStartOf="@+id/edPostAuthor"
            app:layout_constraintTop_toBottomOf="@+id/edPostAuthor" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>