<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/logInFragment">

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.login.presentation.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/fromLogInToHello"
            app:destination="@id/helloUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/helloUserFragment"
        android:name="com.example.login.presentation.HelloUserFragment"
        android:label="fragment_hello_user"
        tools:layout="@layout/fragment_hello_user" >
        <action
            android:id="@+id/fromHelloToLogIn"
            app:destination="@id/logInFragment" />
    </fragment>
</navigation>