<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.screens.details.DetailsFragment">

    <data>

        <variable
            name="viewmodel"
            type="com.example.login.ui.screens.details.DetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/marginStyle"
            android:text="@{`Genus: ` + viewmodel.birdDetailModel.gen}"
            android:textColor="@color/primary_green_def"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="addadadada" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/marginStyle"
            android:text="@{`Subspecies: ` + viewmodel.birdDetailModel.sp}"
            android:textColor="@color/primary_green_def"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="Subspecies: Eagle" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/marginStyle"
            android:text="@{`Sound Type: ` + viewmodel.birdDetailModel.type}"
            android:textColor="@color/primary_green_def"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="Sound Type: Eagle" />

        <TextView
            android:id="@+id/textView6"
            style="@style/marginStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Location: ` + viewmodel.birdDetailModel.loc}"
            android:textColor="@color/primary_green_def"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Location: Eagle" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/marginStyle"
            android:text="@{`Country: ` + viewmodel.birdDetailModel.cnt}"
            android:textColor="@color/primary_green_def"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Country: Eagle" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/marginStyle"
            android:text="@{`Remark: ` + viewmodel.birdDetailModel.rmk}"
            android:textColor="@color/primary_green_def"
            android:textStyle="bold"
            tools:text="Remark: Eagle" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/marginStyle"
            android:textSize="24sp"
            android:text="@{`Record: ` + viewmodel.birdDetailModel.rec}"
            android:textColor="@color/primary_green_def"
            android:textStyle="bold"
            tools:text="Record: Eagle" />

        <ImageView
            android:id="@+id/imgValue"
            imageUrl="@{viewmodel.birdDetailModel.pictureModel.full}"
            android:layout_width="345dp"
            android:layout_height="110dp"
            android:maxWidth="345dp"
            style="@style/marginStyle"

            android:maxHeight="110dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.743" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{() -> viewmodel.onClose()}"
            android:text="@string/close"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


</layout>
