<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.login.ui.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/startScreenFragment"
        android:name="com.example.login.ui.gamesScreens.SceneLectureHall1Fragment"
        android:label="fragment_start_screen"
        tools:layout="@layout/fragment_start_screen" >
        <action
            android:id="@+id/fromStartToBadEnding"
            app:destination="@id/sceneLaterBadEndingFragment" />
        <action
            android:id="@+id/fromStartToRightAway"
            app:destination="@id/sceneRightAwayFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.login.ui.menu.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/fromMenuToStart"
            app:destination="@id/startScreenFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            />
    </fragment>
    <fragment
        android:id="@+id/sceneLaterBadEndingFragment"
        android:name="com.example.login.ui.gamesScreens.SceneLaterBadEndingFragment"
        android:label="SceneLaterBadEndingFragment" >
        <action
            android:id="@+id/fromBadToStartGame"
            app:destination="@id/startScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/sceneRightAwayFragment"
        android:name="com.example.login.ui.gamesScreens.SceneRightAwayFragment"
        android:label="SceneRightAwayFragment" >
        <action
            android:id="@+id/fromRightAwayToGame"
            app:destination="@id/sceneGameFragment" />
        <action
            android:id="@+id/fromRightAwayToBook"
            app:destination="@id/sceneBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/sceneGameFragment"
        android:name="com.example.login.ui.gamesScreens.SceneGameFragment"
        android:label="SceneGameFragment" >
        <action
            android:id="@+id/fromGameToMarry"
            app:destination="@id/sceneMarryFragment" />
    </fragment>
    <fragment
        android:id="@+id/sceneBookFragment"
        android:name="com.example.login.ui.gamesScreens.SceneBookFragment"
        android:label="SceneBookFragment" >
        <action
            android:id="@+id/fromBookToMarry"
            app:destination="@id/sceneMarryFragment" />
    </fragment>
    <fragment
        android:id="@+id/sceneMarryFragment"
        android:name="com.example.login.ui.gamesScreens.SceneMarryFragment"
        android:label="SceneMarryFragment" >
        <action
            android:id="@+id/fromHappyEndToStartGame"
            app:destination="@id/startScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.login.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/fromSettingsToStartScreen"
            app:destination="@id/startScreenFragment" />
    </fragment>
</navigation>