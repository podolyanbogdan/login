<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.login.ui.level.LevelViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_white_def">

        <ImageView
            android:id="@+id/imgLevel"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.241"
            app:srcCompat="@drawable/ic_game_skill" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/what_is_your_level"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imgLevel"
            app:layout_constraintStart_toStartOf="@+id/imgLevel"
            app:layout_constraintTop_toBottomOf="@+id/imgLevel" />

        <com.google.android.material.slider.Slider
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:valueFrom="1"
            app:onValueChangeListener="@{(value)-> viewmodel.onValueChanged(value)}"
            android:valueTo="5"
            android:stepSize="1"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="@+id/imgLevel"
            app:layout_constraintStart_toStartOf="@+id/imgLevel"
            app:layout_constraintTop_toBottomOf="@+id/tvLevel" />

        <TextView
            android:id="@+id/tvCurrentLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewmodel.levelValue + ` from 5`}"
            tools:text="4 from 5"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/seekBar"
            app:layout_constraintStart_toStartOf="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="@string/prev"
            android:drawableLeft="@drawable/ic_arrow_back"
            app:cornerRadius="0dp"
            android:onClick="@{() -> viewmodel.prevClicked()}"
            app:layout_constraintEnd_toStartOf="@+id/tvCurrentLevel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:drawableEnd="@drawable/ic_btn_next_arrow"
            android:onClick="@{() -> viewmodel.nextClicked()}"
            android:text="@string/next"
            app:cornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="@+id/seekBar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentLevel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>